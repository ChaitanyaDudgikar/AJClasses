<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundaj"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/onlineExamCardView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#F07172"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479">

        <TextView
            android:id="@+id/onlineExamTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Online Exam"
            android:textColor="#313CFA"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/examImageView"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/exam" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/videoLectureCardView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:cardBackgroundColor="#ADB6FD"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479">

        <TextView
            android:id="@+id/videoLectureTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Video Lecture"
            android:textColor="#313CFA"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/lectureImageView"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/lecture" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/notificationCardView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:cardBackgroundColor="#FEE377"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777">

        <TextView
            android:id="@+id/notificationTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Results"
            android:textColor="#313CFA"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/notificationImageView"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/notification" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/notesCardView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:cardBackgroundColor="#47CC87"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775">

        <TextView
            android:id="@+id/notesTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Notes"
            android:textColor="#313CFA"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/notesImageView"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/notes" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#F8FFFFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/teacherImageView"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/stud2" />

        <ImageView
            android:id="@+id/studentImageView"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:alpha="0"
            app:srcCompat="@drawable/stud3" />

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="25dp"
            android:text="Online Exams"
            android:textColor="#FD6E10"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="65dp"
            android:text="Video Lecture"
            android:textColor="#FD6E10"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thirdTextView"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="105dp"
            android:text="Notes"
            android:textColor="#FD6E10"
            android:textSize="12sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/aboutus"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="12sp"
        android:text="About us"
        android:elevation="15dp"
        android:background="#0FA1F4"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>